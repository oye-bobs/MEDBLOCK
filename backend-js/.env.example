NODE_ENV=development
PORT=8000

# Database Configuration
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=medblock
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true

# Cardano Network Configuration (Preprod Testnet)
CARDANO_NETWORK=preprod
BLOCKFROST_PROJECT_ID=your_blockfrost_project_id_here
BLOCKFROST_URL=https://cardano-preprod.blockfrost.io/api/v0

# Wallet Configuration (for backend transactions)
CARDANO_WALLET_SEED=your_24_word_seed_phrase_here

# Encryption
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h

# Atala PRISM DID Configuration
PRISM_NODE_URL=https://prism-node.atalaprism.io
PRISM_API_KEY=your_prism_api_key
PRISM_DID_METHOD=prism

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=debug
